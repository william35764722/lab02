
const byte NUM=8;
const byte
led[]={3,4,5,8,9,10,11,12};
const int delaytime=50;
int ii;
void setup() {
for (ii=0;ii<NUM;ii++)
{ pinMode(led[ii],OUTPUT);
 digitalWrite(led[ii],LOW);
}
}



void loop()
/*����*/
 {

delay(delaytime); 
delay(delaytime); 
digitalWrite(led[0],HIGH);
digitalWrite(led[1],HIGH);
digitalWrite(led[2],HIGH);
digitalWrite(led[3],HIGH);
digitalWrite(led[4],HIGH);
digitalWrite(led[5],HIGH);
digitalWrite(led[6],HIGH);
digitalWrite(led[7],HIGH);
delay(delaytime); 
delay(delaytime); 
digitalWrite(led[0],LOW);
digitalWrite(led[1],LOW);
digitalWrite(led[2],LOW);
digitalWrite(led[3],LOW);
digitalWrite(led[4],LOW);
digitalWrite(led[5],LOW);
digitalWrite(led[6],LOW);
digitalWrite(led[7],LOW);
delay(delaytime); 
delay(delaytime); 
delay(delaytime); 
digitalWrite(led[0],HIGH);
digitalWrite(led[1],HIGH);
digitalWrite(led[2],HIGH);
digitalWrite(led[3],HIGH);
digitalWrite(led[4],HIGH);
digitalWrite(led[5],HIGH);
digitalWrite(led[6],HIGH);
digitalWrite(led[7],HIGH);
delay(delaytime); 
delay(delaytime); 
digitalWrite(led[0],LOW);
digitalWrite(led[1],LOW);
digitalWrite(led[2],LOW);
digitalWrite(led[3],LOW);
digitalWrite(led[4],LOW);
digitalWrite(led[5],LOW);
digitalWrite(led[6],LOW);
digitalWrite(led[7],LOW);
delay(delaytime); 


for(ii=0;ii<NUM;ii++)

{ digitalWrite(led[ii],HIGH);
 delay(delaytime);
 digitalWrite(led[ii],LOW);
 }
 delay(delaytime); 
delay(delaytime); 
 for (ii=0;ii<NUM;ii++)
{
 digitalWrite(led[ii],LOW);
}
delay(delaytime); 
delay(delaytime); 
digitalWrite(led[0],HIGH);
digitalWrite(led[1],HIGH);
digitalWrite(led[2],HIGH);
digitalWrite(led[3],HIGH);
digitalWrite(led[4],HIGH);
digitalWrite(led[5],HIGH);
digitalWrite(led[6],HIGH);
digitalWrite(led[7],HIGH);
delay(delaytime); 
delay(delaytime); 
digitalWrite(led[0],LOW);
digitalWrite(led[1],LOW);
digitalWrite(led[2],LOW);
digitalWrite(led[3],LOW);
digitalWrite(led[4],LOW);
digitalWrite(led[5],LOW);
digitalWrite(led[6],LOW);
digitalWrite(led[7],LOW);
delay(delaytime); 
delay(delaytime); 
delay(delaytime); 
digitalWrite(led[0],HIGH);
digitalWrite(led[1],HIGH);
digitalWrite(led[2],HIGH);
digitalWrite(led[3],HIGH);
digitalWrite(led[4],HIGH);
digitalWrite(led[5],HIGH);
digitalWrite(led[6],HIGH);
digitalWrite(led[7],HIGH);
delay(delaytime); 
delay(delaytime); 
digitalWrite(led[0],LOW);
digitalWrite(led[1],LOW);
digitalWrite(led[2],LOW);
digitalWrite(led[3],LOW);
digitalWrite(led[4],LOW);
digitalWrite(led[5],LOW);
digitalWrite(led[6],LOW);
digitalWrite(led[7],LOW);
delay(delaytime); 


/*�k��*/
 for(ii=NUM-1;ii>=0;ii--)

{ digitalWrite(led[ii],HIGH);
 delay(delaytime);

 digitalWrite(led[ii],LOW);
 }
 delay(delaytime); 

 for (ii=0;ii<NUM;ii++)
{
 digitalWrite(led[ii],LOW);
}
delay(delaytime);

}
